<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="view_order_tree_apsext" model="ir.ui.view">
            <field name="name">sale.order.tree.apsext</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <tree string="Sales Orders" position="attributes">
                    <attribute name="colors">blue:state in ('draft','sent');grey:state=='cancel';black:state in ('waiting_date','manual','progress');red:state in ('invoice_except','shipping_except');green:state == 'done';</attribute>
                </tree>
            </field>
        </record>

        <record id="view_quotation_tree_apsext" model="ir.ui.view">
            <field name="name">sale.order.tree.apsext</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <tree string="Quotation" position="attributes">
                    <attribute name="colors">blue:state in ('draft','sent');grey:state=='cancel';black:state in ('waiting_date','manual','progress');red:state in ('invoice_except','shipping_except');green:state == 'done';</attribute>
                </tree>
            </field>
        </record>
        
        <record id="view_partner_bank_form_apsext" model="ir.ui.view">
            <field name="name">res.partner.bank.form.apsext</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="base.view_partner_bank_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="bank" position="attributes">
                        <attribute name="string">Bank Name</attribute>
                    </field>
                    <field name="bank_name" position="attributes">
                        <attribute name="string">Bank Code</attribute>
                    </field>  
                    <field name="bank_bic" position="attributes">
                        <attribute name="string">Swift Code</attribute>
                    </field>  
                </data>
            </field>
        </record>
        
    </data>
</openerp>